<h2>Post about your trips here.</h2>

<div class="posts_container">

    <% @posts.each do |p| %>
        <div class="post">
            <%= p.caption %>
            <%= p.content %>
            <%= p.image %>
        </div>
    <% end %>

</div>
<%= form_remote_tag(:url => {:action => 'create'},
    :update => "posts_container", :position => :bottom,
    :html => {:id => 'post_form'})%>
Name: <%= text_field "post", "name" %>
<%= submit_tag 'Add' %>
<%= end_form_tag %>
<footer>
	<form action="/create_post">
		<input type="text" name="content" placeholder="content">
		<input type="text" name="caption" placeholder="caption">
		<input type="text" name="image" placeholder="image url">
		<input type="submit">
	</form>
</footer>
