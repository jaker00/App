<h2>Edit Post</h2>


<form action="/update_post/<%= @post.id %>">
  <input type="text" name="caption" placeholder="caption" value="<%= @post.caption %>">
  <input type="text" name="content" placeholder="content" value="<%= @post.content %>">
  <input type="text" name="image" placeholder="image" value="<%= @post.image %>">
  <input type="text" name="user" placeholder="enter a user name" value="<%= @post.user %>">
  <input type="submit">
</form>