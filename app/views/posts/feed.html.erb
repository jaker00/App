<h2>Post about your trips here.</h2>

<div class="posts_container" style="overflow: auto;">

    <% @posts.each do |p| %>
        <div class="post">
            <p>
            <%= image_tag p.image_url.to_s %>
            </p>
            <p>
            <b><%= p.caption %></b>
            <%= p.content %>
            </p>
        </div>
    <% end %>

</div>

<footer>
<%= form_for @post, :html => {:multipart => true} do |f| %>
        <%= f.text_field :caption, :placeholder => "Caption" %>
        <%= f.text_field :content, :placeholder => "Content" %>
        <%= f.text_field :user, :placeholder => "Enter a user name here" %>
        
        <span>
        <%= f.file_field :image %>
        </span>
        <%= f.submit %>
<% end %>
</footer>
