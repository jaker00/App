<h2>Post about your trips here.</h2>

<div class="posts_container" style="overflow: auto;">

    <% @posts.each do |p| %>
        <div class="post">
            <%= p.caption %>
            <%= p.content %>
            <div class="image">
            <%= image_tag p.image_url(:thumb).to_s %>
            </div>
        </div>
    <% end %>

</div>

<footer>
<%= form_for @post, :html => {:multipart => true} do |f| %>
        <%= f.text_field :caption, :placeholder => "Caption" %>
        <%= f.text_field :content, :placeholder => "Content" %>
        <span>
        <%= f.file_field :image %>
        </span>
        <%= f.submit %>
<% end %>
</footer>
